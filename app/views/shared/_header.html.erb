<header class="p-3 bg-dark text-white">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><%= link_to "TOP", root_path, class: "nav-link px-2 text-white"%></li>
                    <li><%= link_to "HOME", timers_path, class: "nav-link px-2 text-white" %></li>
                </ul>
                    <% if logged_in? %>
                        <%= link_to "Log out",logout_path, method: :delete, class: "btn btn-outline-light me-2"%>
                    <%else%>
                        <div class="text-end">
                            <%= link_to "Log in", login_path, class: "btn btn-outline-light me-2"%>
                            <%= link_to "Sign up", new_user_path, class: "btn btn-warning"%>
                        </div>
                    <%end%>
        </div>    
    </div>
</header>