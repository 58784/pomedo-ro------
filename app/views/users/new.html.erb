<% content_for(:title, t('.title')) %>
<div class="text-center">
    <div class="form-signin">
        <h3 class="my-5 fw-normal">Sign up</h3>
        <%= form_with model: @user, local: true do |f| %>
            <div class="col-md-6 offset-md-3">
                <%= render 'shared/error_messages', object: f.object %>
            </div>
            <div class="form-floating mb-3">
                <%= f.text_field :email, placeholder: "メールアドレス" %>
            </div>

            <div class="form-floating mb-3">
                <%= f.password_field :password, placeholder: "パスワード" %>
            </div>

            <div class="form-floating mb-4">
                <%= f.password_field :password_confirmation, placeholder: "パスワード確認" %>
            </div>

            <%= f.submit "Sign up", class: "mb-3 btn btn-warning" %>
        <% end %>
        </div>
        </div>
