<% content_for(:title, t('.title')) %>
<h1>Log in</h1>
<%= form_with url: login_path, local: true do |f| %>
    <%= f.label (t '.email') %>
    <%= f.email_field :email %>

    <%= f.label (t '.password') %>
    <%= f.password_field :password %>

    <%= f.submit "Log in" %>
<% end %>
<%= link_to "パスワードを忘れた方はこちら", new_password_reset_path%>